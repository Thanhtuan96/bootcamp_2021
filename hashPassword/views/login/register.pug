extends ../layouts/mainLayout

block content 
    form(action='/register',method='post')
        .mb-3
            label.form-label(for='userName') Username
            input#userName.form-control(type='text',name='name')
        .mb-3
            label.form-label(for='email-input') Email address
            input#email-input.form-control(type='email' aria-describedby='emailHelp',name='email')
            #emailHelp.form-text We&apos;ll never share your email with anyone else.
        .mb-3
            label.form-label(for='password-input') Password
            input#password-input.form-control(type='password',name='password')
        .mb-4
            label.form-label(for='phone') Phone number
            input.form-control#phone(type='tel',name='phone')
        button.btn.btn-primary(type='submit') Register
        a.mx-1.btn.btn-success(href='/login') Already have an account
