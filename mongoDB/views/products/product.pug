doctype html
html(lang="en")
    include ../commons/header.pug
    body 

        h1 Product

        .column.is-one-third.box.m-2
            .card
            header.card-header
                p.card-header-title= product.name
                button.card-header-icon(aria-label='more options')
                span.icon
                    i.fas.fa-angle-down(aria-hidden='true')
            .card-content
                .content= product.price
            footer.card-footer
                a.card-footer-item(href='/products/') Back
                a.card-footer-item(href='/products/'+ product._id + '/edit') Edit
                form(action='/products/'+ product._id + '?_method=DELETE', method='post')
                    button.button.is-danger  Delete

