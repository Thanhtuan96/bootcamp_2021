extends ../layouts/mainLayout

block content
    a.mt-3.mb-3.btn.btn-primary(href="/campgrounds/new") Add Camp
    .row 
        each camp in camps 
            .camp-container.d-flex.flex-column.justify-content-center.align-items-center.col-md-4.col.border.border-primary.rounded.py-5.px-0.m-auto   
                h2= camp.title 
                p= camp.description
                p= camp.price
                .rating-star 
                    span.fa.fa-star.checked 
                    span.fa.fa-star.checked 
                    span.fa.fa-star.checked
                    span.fa.fa-star
                    span.fa.fa-star
                .btn-group
                    a.btn.btn-outline-primary(href="/campgrounds/" + camp._id ) Details
                    a.btn.btn-outline-secondary(href="/campgrounds/" + camp._id + "/edit") Edit
                    form(action="/campgrounds/" + camp._id + "?_method=DELETE",method='post') 
                        button.btn.btn-outline-danger Remove
            