extends ../layouts/mainLayout

block content
    .container-fluid
        - success ? h1= success : "";
        .container
            a.mt-3.mb-3.btn.btn-primary(href="/campgrounds/new") Add Camp
            .row
                each camp in camps 
                    .camp-container.d-flex.flex-column.justify-content-center.align-items-center.col.col-md-4.col.border.border-primary.rounded.py-5.px-0.h-100
                        h2= camp.title 
                        img.img-thumbnail(src=camp.imageUrl)
                        p= camp.description
                        p= camp.price
                        .rating-star 
                            span.fa.fa-star.checked 
                            span.fa.fa-star.checked 
                            span.fa.fa-star.checked
                            span.fa.fa-star
                            span.fa.fa-star
                        .btn-group
                            a.btn.btn-outline-primary(href="/campgrounds/" + camp._id ) 
                                .bi.bi-three-dots= 'Details of ' + camp.title
