extends ../layouts/mainLayout

block content
    .container-fluid
        - success ? h1= success : "";
        .container
            a.mt-3.mb-3.btn.btn-primary(href="/campgrounds/new") Add Camp
            .row
                each product in products 
                    .camp-container.d-flex.flex-column.justify-content-center.align-items-center.col.col-md-4.col.border.border-primary.rounded.py-5.px-0.h-100
                        h2= product.name
                        p= product.price
                        a(href='/products/search?q='+ product.category)= product.category
                        form(action="/products/" + product._id + "?_method=DELETE",method='post',id='delete-form') 
                            .btn-group
                                a.btn.btn-outline-primary(href="/products/" + product._id ) 
                                    .bi.bi-three-dots Details
                                a.btn.btn-outline-secondary(href="/products/" + product._id + "/edit") 
                                    .bi.bi-pencil-square Edit
                                button.btn.btn-outline-danger
                                    .bi.bi-trash Remove